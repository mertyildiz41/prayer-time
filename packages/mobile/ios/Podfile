def node_require(script)
  # Resolve script with node to allow for hoisting
  require Pod::Executable.execute_command('node', ['-p',
    "require.resolve(
      '#{script}',
      {paths: [process.argv[1]]},
    )", __dir__]).strip
end

node_require('react-native/scripts/react_native_pods.rb')
node_require('react-native-permissions/scripts/setup.rb')

platform :ios, min_ios_version_supported
prepare_react_native_project!

setup_permissions([
  'LocationWhenInUse',
  'Notifications',
])

linkage = ENV['USE_FRAMEWORKS']
# if linkage != nil
#   Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
#   use_frameworks! :linkage => linkage.to_sym
# end

target 'PrayerTime' do
  config = use_native_modules!

  # ReactPush dependencies
  pod 'RNFS', :path => '../node_modules/react-native-fs'
  pod 'RNZipArchive', :path => '../node_modules/react-native-zip-archive'

  use_react_native!(
    :path => config[:reactNativePath],
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  post_install do |installer|
    installer.pods_project.targets.each do |target|
      # Remove -G flag from OTHER_CFLAGS for all targets
      target.build_configurations.each do |config|
        flags = config.build_settings['OTHER_CFLAGS']
        if flags.is_a?(String)
          config.build_settings['OTHER_CFLAGS'] = flags.split(' ').reject { |flag| flag == '-G' }.join(' ')
        elsif flags.is_a?(Array)
          config.build_settings['OTHER_CFLAGS'] = flags.reject { |flag| flag == '-G' }
        end
      end
      # Existing BoringSSL-GRPC fix
      if target.name == 'BoringSSL-GRPC'
        target.source_build_phase.files.each do |file|
          if file.settings && file.settings['COMPILER_FLAGS']
            flags = file.settings['COMPILER_FLAGS'].split
            flags.reject! { |flag| flag == '-GCC_WARN_INHIBIT_ALL_WARNINGS' }
            file.settings['COMPILER_FLAGS'] = flags.join(' ')
          end
        end
      end
      # Modular headers workaround for New Architecture
      if ENV['RCT_NEW_ARCH_ENABLED'] == '1'
        target.build_configurations.each do |config|
          config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
        end
      end
    end
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      # :ccache_enabled => true
    )
  end
end
