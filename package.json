{
  "name": "prayer-time-monorepo",
  "version": "1.0.0",
  "description": "Prayer Time PWA, Mobile (React Native), and Desktop Application",
  "license": "Apache-2.0",
  "private": true,
  "workspaces": [
    "packages/shared",
    "packages/web",
    "packages/mobile",
    "packages/desktop"
  ],
  "scripts": {
    "install-all": "yarn install",
    "web:dev": "yarn workspace @prayer-time/web start",
    "web:build": "yarn workspace @prayer-time/web build",
    "mobile:dev": "yarn workspace @prayer-time/mobile start",
    "mobile:build": "yarn workspace @prayer-time/mobile build:android && yarn workspace @prayer-time/mobile build:ios",
    "mobile:android": "yarn workspace @prayer-time/mobile run android",
    "mobile:ios": "yarn workspace @prayer-time/mobile run ios",
    "desktop:dev": "yarn workspace @prayer-time/desktop start",
    "desktop:build": "yarn workspace @prayer-time/desktop build",
    "desktop:pack": "yarn workspace @prayer-time/desktop pack",
    "shared:build": "yarn workspace @prayer-time/shared build"
  },
  "devDependencies": {
    "lerna": "^7.2.0"
  }
}
